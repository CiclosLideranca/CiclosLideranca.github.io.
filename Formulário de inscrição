<script>
const lonelinessChartCtx = document.getElementById('lonelinessChart').getContext('2d');
const centerTextPlugin = {
  id: 'centerText',
  afterDraw: (chart) => {
    const { ctx } = chart;
    const text = '72%';
    const x = chart.getDatasetMeta(0).data[0].x;
    const y = chart.getDatasetMeta(0).data[0].y;
    ctx.save();
    ctx.font = 'bold 3rem Inter, sans-serif';
    ctx.fillStyle = '#1e293b';
    ctx.textAlign = 'center';
    ctx.textBaseline = 'middle';
    ctx.fillText(text, x, y);
    ctx.restore();
  }
};

const lonelinessChart = new Chart(lonelinessChartCtx, {
  type: 'doughnut',
  data: {
    labels: ['L√≠deres que relatam solid√£o', 'Outros L√≠deres'],
    datasets: [{
      label: '% de L√≠deres',
      data: [72, 28],
      backgroundColor: ['#7c3aed', '#e2e8f0'],
      borderColor: ['#7c3aed', '#e2e8f0'],
      borderWidth: 2,
      hoverOffset: 4
    }]
  },
  options: {
    responsive: true,
    maintainAspectRatio: false,
    cutout: '75%',
    plugins: {
      legend: {
        position: 'bottom',
        labels: {
          padding: 20,
          font: { size: 14 }
        }
      },
      tooltip: {
        callbacks: {
          label: (context) => `${context.label}: ${context.raw}%`
        }
      }
    }
  },
  plugins: [centerTextPlugin]
});

const modal = document.getElementById('form-modal');
const openButton = document.getElementById('open-form-button');
const closeButton = document.getElementById('close-form-button');
const closeThankYouButton = document.getElementById('close-thank-you-button');
const form = document.getElementById('membership-form');
const formContent = document.getElementById('form-content');
const thankYouMessage = document.getElementById('thank-you-message');

function openModal() {
  modal.classList.remove('hidden');
}

function closeModal() {
  modal.classList.add('hidden');
  thankYouMessage.classList.add('hidden');
  formContent.classList.remove('hidden');
}

openButton.addEventListener('click', openModal);
closeButton.addEventListener('click', closeModal);
closeThankYouButton.addEventListener('click', closeModal);
modal.addEventListener('click', (event) => {
  if (event.target === modal) {
    closeModal();
  }
});

form.addEventListener('submit', (e) => {
  e.preventDefault();
  const scriptURL = 'https://script.google.com/macros/s/AKfycbwis0n8vVi5vvIl5LMPNrQBWL1OUvmIr_Syl55C-tiSGQttOueq7Ycfr7-ND77d2lsY/exec';
  const submitButton = e.target.querySelector('button[type="submit"]');
  submitButton.disabled = true;
  submitButton.textContent = 'Enviando...';

  fetch(scriptURL, {
    method: 'POST',
    body: new FormData(form)
  })
    .then(response => {
      if (!response.ok) {
        throw new Error(`HTTP error! status: ${response.status}`);
      }
      return response.text();
    })
    .then(text => {
      console.log("Raw response from Google Script:", text);
      try {
        const data = JSON.parse(text);
        if (data.result === 'success') {
          formContent.classList.add('hidden');
          thankYouMessage.classList.remove('hidden');
          form.reset();
        } else {
          throw new Error(`Script error! Details: ${data.error || 'Unknown error'}`);
        }
      } catch (e) {
        throw new Error("Failed to parse JSON response from script. Raw text: " + text);
      }
    })
    .catch(error => {
      console.error('Detailed Error:', error);
      alert('Ocorreu um erro ao enviar a sua inscri√ß√£o. Por favor, tente novamente.');
    })
    .finally(() => {
      submitButton.disabled = false;
      submitButton.textContent = 'Enviar Inscri√ß√£o';
    });
});
</script>
